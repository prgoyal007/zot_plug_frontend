{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleSuffixes": [".native", ".ios", ".android", ".web", ""]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}

